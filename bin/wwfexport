"""
solvexport - Export rankings for all courses in the SOLV ranking format
"""

import sys

from bosco.import import load_config
from bosco.course import Course
from bosco.runner import Category
from bosco.formatter import RoundCountRankingFormatter
from bosco.run import Run

conf = load_config()

f = open(sys.argv[1], 'wb')
courses = conf.store.find(Category)
f.write(str(RoundCountRankingFormatter([conf.event.ranking(c) for c in courses],
                                 conf.starttime)))

f.close()
